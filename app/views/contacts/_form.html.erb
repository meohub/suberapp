<%= simple_form_for(@contact) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :surname %>
      <%= f.input :phone_number %>
      <%= f.input :email %>
      <%= f.input :address %>
      <%= f.input :city %>
      <%= f.input :zip %>
      <%= f.input :state %>
      <%= f.input :country %>
      <%= f.input :notes %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
